@model StoreFront.DATA.EF.Models.Category

<div class="row">
    <div class="col-md-6 offset-md-3 pt-3">
        <form asp-action="Create" method="post" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="CategoryName" class="form-control" placeholder="Name" required />
                <label asp-for="CategoryName" class="control-label"></label>
                <span asp-validation-for="CategoryName" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="CategoryDescription" class="form-control" placeholder="Description"></textarea>
                <label asp-for="CategoryDescription" class="control-label"></label>
                <span asp-validation-for="CategoryDescription" class="invalid-feedback"></span>
            </div>
            <div class="form-floating">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
